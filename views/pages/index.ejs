<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <form method="post" action="/">
      <input type="text" name="search" style="color:#000;"/>
      <input type="submit" name="submit" value="Search" class="btn btn-success"/>
    </form>
  </div>
</div>
<div class="container">
  <% if(search==1) {%>
    <h2>Search Results</h2>
  <% } %>
  <% if(results.length>0) {%>
      
      
  <table class="table">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
            First Name
          </th>
          <th>
              Last Name
          </th>
          <th>
              Action
          </th>
      </tr>
    </thead>
    <tbody>
      <% results.forEach(function(res){ %>
         <tr>
            <td>
                <%= res.id %>
            </td>
            <td>
                <%= res.givenname %>
            </td>
            <td>
                <%= res.surname %>
            </td>
            <td>
              <a href="/person/<%= res.id %>" class="btn btn-primary">View</a>
            </td>
         </tr>
      <% }); %>
        </tbody>
  </table>
  <% }else if (search==1 && !(results.length>0)) {%>
    The Search returned no results.
    <%}%>
</div>



</body>
</html>
